<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@layout/frame"
        android:minWidth="250dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/myMargin10"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textAlertTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/emptyString"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/myMargin10"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textAlertMessage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/myMargin10"
                android:text="@string/emptyString"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/myMargin10"
            android:layout_weight="1"
            android:background="@layout/footer_background"
            android:gravity="center_vertical|center_horizontal" >

            <Button
                android:id="@+id/buttonAlertNegative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="@dimen/myMargin05"
                android:layout_weight="1"
                android:text="@android:string/cancel" />

            <Button
                android:id="@+id/buttonAlertPositive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="@dimen/myMargin05"
                android:layout_weight="1"
                android:text="@android:string/ok" />

        </LinearLayout>
        
    </LinearLayout>
